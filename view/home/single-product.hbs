<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <div class="card mb-4">
        <img src="{{product.dataValues.image}}" class="card-img-top" alt="1">
        <div class="card-body">
          <h5 class="card-title">{{product.dataValues.title}}</h5>
          <p class="card-text">${{product.dataValues.amount}}</p>
          <p class="card-text">Description: {{product.dataValues.description}}</p>
        </div>
      </div>
      <div class="mt-5">
        <h4>Comments</h4>
        <div class="mb-5">
          <form action="/comment/create-comment/{{id}}" method="post" enctype="application/x-www-form-urlencoded">
            <label for="email">Email</label>
            <input type="email" name="email" required class="form-control mb-2" id="email">
            <textarea name="text" id="" required cols="30" class="form-control mb-2" placeholder="Write something..."
              rows="10"></textarea>

            <input type="hidden" name="productId" value="{{id}}">
            <button class="btn btn-primary" type="submit">Send</button>
          </form>
        </div>

      </div>
      <div class="d-flex flex-column gap-2">
        {{#each product.dataValues.comments}}
        <div class="card-body">
          <div class="list-group mb-1">
            <div class="list-group-item list-group-item-action">
              <div class="d-flex align-items-center gap-2">

                <i class="fas fa-user"></i>
                <p class="card-title">{{dataValues.email}}</p>
              </div>
              <p class="card-text">{{dataValues.text}}</p>
              <p class="card-text"><small class="text-muted">{{dataValues.createdAt}}</small></p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Order</h5>
          <form action="/order/create-order" method="post" enctype="application/x-www-form-urlencoded">
            <div class="mb-3">
              <label for="customerName" class="form-label">F.I.SH</label>
              <input type="text" class="form-control" name="customer" id="customerName" placeholder="Enter your name"
                required>
            </div>
            <div class="mb-3">
              <label for="customerRegion" class="form-label">Region</label>
              <select type="text" class="form-control" name="region" id="customerRegion" placeholder="Enter your region"
                required>
                <option value="Andijon">Andijon</option>
                <option value="Namangan">Namangan</option>
                <option value="Farg'ona">Farg'ona</option>
                <option value="Toshkent">Toshkent</option>
                <option value="Sirdaryo">Sirdaryo</option>
                <option value="Jizzax">Jizzax</option>
                <option value="Samarqand">Samarqand</option>
                <option value="Qashqadaryo">Qashqadaryo</option>
                <option value="Surxondaryo">Surxondaryo</option>
                <option value="Navoiy">Navoiy</option>
                <option value="Buxoro">Buxoro</option>
                <option value="Xorazm">Xorazm</option>
                <option value="Qoraqalpog'iston Respublikasi">Qoraqalpog'iston Respublikasi</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="customerPhone" class="form-label">Phone</label>
            
              <input type="tel" id="phoneNumber{{dataValues.id}}" name="phone" class="form-control"
                pattern="(\+998\s\d{2}\s\d{3}-\d{2}-\d{2})" required>
                <small class="text-danger">Format: +998 90 123-45-67</small>
            </div>
            <input type="hidden" name="productId" value="{{product.dataValues.id}}">
            <button type="submit" class="btn btn-primary">Order</button>
            <script>
              const phoneNumberInput{{ dataValues.id }} = document.getElementById(`phoneNumber${{ dataValues.id }}`);

              phoneNumberInput{ { dataValues.id } }.addEventListener('input', function () {
                const phoneNumber = this.value;
const phoneNumberPattern = /^\+998\d{2}\d{3}-\d{2}-\d{2}$/;

                if (!phoneNumberPattern.test(phoneNumber)) {
                  phoneNumberInput{ { dataValues.id } }.setCustomValidity('Telefon raqamini belgilangan formatda kiriting: (+998 90 123-45-67)');
                } else {
                  phoneNumberInput{ { dataValues.id } }.setCustomValidity('');
                }
              });
            </script>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>