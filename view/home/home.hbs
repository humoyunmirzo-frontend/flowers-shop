

  <div class="container mt-4">
    <div class="row  row-cols-4 row-cols-md-4 g-4 align-items-stretch">
        {{#if products}}
        {{#each products}}
      <div class="col-3">
        <div class="card">
          <img src="{{image}}" class="card-img-top" style="width: 100%; height:300px; object-fit:cover;" alt="Product 1">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">${{amount}}</p>
            <a href="/products/{{id}}" class="btn btn-primary">Buy</a>
          </div>
        </div>
      </div>
        {{/each}}
        {{/if}}
    </div>
  </div>
